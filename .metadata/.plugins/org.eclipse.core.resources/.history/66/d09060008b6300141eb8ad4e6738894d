
public class Solution {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Solution s = new Solution();
		String a = "1";
		String b = "0";
		System.out.print(s.addBinary(a, b));

	}
	public String addBinary(String a, String b) {
        boolean forward =false;
        String rslt = "";
        for(int i = Math.min(a.length(),b.length())-1;i >= 0;i--){
            if(a.charAt(i) =='1' && b.charAt(i) == '1' && forward){
                rslt += '1';
                forward = true;
            }else if(a.charAt(i) == '1' && b.charAt(i) == '1'){
                rslt += '0';
                forward = true;
            }else if(a.charAt(i) == '1' || b.charAt(i) == '1' && forward){
                rslt += '0';
                forward = true;
            }else{
                rslt += (a.charAt(i) == '1' || b.charAt(i) == '1' || forward)?'1':'0';
                forward = false;
            }
        }
        if(b.length() < a.length()){
            for(int j = a.length()-b.length();j >= 0;j--){
                if(forward && a.charAt(j) == '1'){
                    rslt += '0';
                    forward = true;
                }else{
                    rslt += (forward || a.charAt(j) == '1')?'1':'0';
                    forward = false;
                }
            }
        }
        if(a.length() < b.length()){
            for(int j = b.length()-a.length();j >= 0;j--){
                if(forward && b.charAt(j) == '1'){
                    rslt += '0';
                    forward = true;
                }else{
                    rslt += (forward || b.charAt(j) == '1')?'1':'0';
                    forward = false;
                }
            }
        }
        
        
        if(forward){
        	rslt += '1';
        }
        
        // reverse the rslt
        String reverse = new StringBuffer(rslt).reverse().toString();
        return reverse;
    }
}
